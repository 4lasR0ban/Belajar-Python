# latihan projek python 3

def bintangA(n):
    for i in range(1, n+1):
        for j in range(i):
            print('*', end='')
        print()

def bintangB(n):
    for i in range(n):
        for j in range(n-i):
            print('*', end='')
        print()

def bintangC(n):
    bintangA(n//2)
    bintangB(n-n//2)
